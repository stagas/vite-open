{
  "name": "vite-open",
  "author": "stagas",
  "short": "stagas/vite-open",
  "description": "open a file in a vite dev server",
  "version": "1.4.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://git@github.com:stagas/vite-open.git"
  },
  "keywords": [
    "vite",
    "open",
    "file"
  ],
  "module": "dist/esm/index.js",
  "main": "dist/cjs/index.js",
  "bin": {
    "vite-open": "dist/cjs/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "start:web": "vite-open --jsx=html-vdom example/web.ts",
    "start:node": "onchange -i src example -- swcno example/node.ts",
    "build:watch": "tsc -p tsconfig.dist.json --outDir dist/esm --module esnext --watch & tsc -p tsconfig.dist.json --outDir dist/cjs --watch",
    "build:dist": "npm run build:bundle && npm run build:min",
    "cov:watch": "jest --coverage --watchAll",
    "clean": "rimraf dist",
    "docs": "documentation readme src --resolve=node --pe ts --re ts --re d.ts --github --section=API --markdown-toc-max-depth=3 && dprint fmt README.md",
    "test": "npm run test:node && npm run test:web",
    "test:node": "jest",
    "test:web": "if find test -type f -name '*.web.*' | grep -q .; then web-test-runner; else echo no web tests; fi",
    "cov": "jest --coverage",
    "build": "npm run build:cjs && npm run build:esm && echo done.",
    "build:cjs": "tsc -p tsconfig.dist.json --outDir dist/cjs",
    "build:esm": "tsc -p tsconfig.dist.json --outDir dist/esm --module esnext && echo '{\"type\":\"module\"}' >dist/esm/package.json",
    "build:bundle": "esbuild dist/esm/index.js --bundle --format=esm --outfile=\"dist/$(cat package.json | jq -r '.name').js\" && wc -c \"dist/$(cat package.json | jq -r '.name').js\"",
    "build:min": "terser --compress --module --mangle -o \"dist/$(cat package.json | jq -r '.name').min.js\" \"dist/$(cat package.json | jq -r '.name').js\" && wc -c \"dist/$(cat package.json | jq -r '.name').min.js\"",
    "start:web:https": "vite-open --jsx=html-vdom --https example/web.ts",
    "lint": "eslint src && dprint check",
    "lint:fix": "eslint --fix src && dprint fmt",
    "prepack": "npm run clean && npm run build && (npm run build:dist || echo unable to bundle)",
    "prepack:dry": "npm pack --dry-run",
    "prepush": "npm run lint && npm run test",
    "prepare": "husky install && node .pull-configs.js"
  },
  "devDependencies": {
    "@n1kk/intspector": "1.0.2",
    "@rollup/plugin-commonjs": "21.0.2",
    "@stagas/documentation-fork": "13.2.5",
    "@stagas/sucrase-jest-plugin": "^2.2.0-fork",
    "@swc-node/jest": "1.4.3",
    "@tsconfig/node16": "1.0.2",
    "@types/jest": "27.4.1",
    "@types/node": "17.0.21",
    "@typescript-eslint/eslint-plugin": "5.15.0",
    "@typescript-eslint/parser": "5.15.0",
    "@web/dev-server-esbuild": "^0.2.16",
    "@web/dev-server-rollup": "0.3.15",
    "@web/test-runner": "0.13.27",
    "dprint": "0.23.1",
    "esbuild": "0.14.27",
    "esbuild-register": "^3.3.2",
    "eslint": "8.11.0",
    "eslint-config-html-jsx": "1.0.0",
    "eslint-plugin-import": "2.25.4",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "jest-browser-globals": "25.1.0-beta",
    "onchange": "7.1.0",
    "prettier": "^2.6.0",
    "pull-configs": "^0.2.0",
    "rimraf": "3.0.2",
    "stdout-stderr": "^0.1.13",
    "swcno": "0.1.1",
    "terser": "5.12.1",
    "ts-jest": "27.1.3",
    "ts-node": "10.7.0",
    "typescript": "4.6.2",
    "vite-open": "^1.3.0",
    "vite-web-test-runner-plugin": "0.1.0"
  },
  "dependencies": {
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-transform-react-jsx": "^7.17.3",
    "@babel/plugin-transform-typescript": "^7.16.8",
    "@originjs/vite-plugin-commonjs": "^1.0.3",
    "@stagas/chalk": "^5.0.0",
    "decarg": "^1.2.0",
    "qrcode-terminal": "^0.12.0",
    "running-at": "^0.3.22",
    "vite": "^2.8.6",
    "vite-plugin-babel-dev": "^1.0.2"
  },
  "trustedDependencies": [
    "decarg",
    "pull-configs",
    "vite-open"
  ]
}
